     4                                  ; 有关BOOT_INFO
     5                                  CYLS	EQU	0x0ff0		;	设定启动区
     6                                  LEDS	EQU	0x0ff1
     7                                  VMODE	EQU	0x0ff2		;	关于颜色数目的信息，颜色的位数
     8                                  SCRNX	EQU	0x0ff4		;	分辨率的X
     9                                  SCRNY	EQU	0x0ff6		; 分辨率的Y
    10                                  VRAM	EQU	0x0ff8		;	图像缓冲区的开始地址
    11                                  
    12                                  	ORG 0xc400				; 程序装载到内存的位置
    13                                  	
    14 00000000 B013                    	mov	AL,0x13			;VGA 显卡，320x200x8 位彩色
    15 00000002 B400                    	mov	AH,0x00
    16 00000004 CD10                    	INT 0x10
    17 00000006 C606F20F08              	mov	BYTE [VMODE],	8	; 记录画面模式
    18 0000000B C706F40F4001            	mov	WORD [SCRNX], 320;
    19 00000011 C706F60FC800            	mov	WORD [SCRNY], 200;
    20 00000017 66C706F80F00000A00      	mov	DWORD [VRAM], 0x000a0000
    21                                  
    22                                  ; 用BIOS取得键盘上各种欧冠你LED指示灯的状态
    23 00000020 B402                    	mov	AH, 0x02
    24 00000022 CD16                    	INT	0x16						; KeyBoard BIOS
    25 00000024 A2F10F                  	mov [LEDS], AL
    26                                  
    27                                  fin:
    28                                  	HTL
